<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GuideLine.Vertical" parent="GuideLine">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideLine.Horizontal" parent="GuideLine">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TitleText">
        <item name="background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoadedImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Poster" parent="LoadedImage" />

    <style name="Poster.154" parent="Poster">
        <item name="android:layout_width">@dimen/poster_154_width</item>
        <item name="android:layout_height">@dimen/poster_154_height</item>
    </style>

    <style name="Poster.185" parent="Poster">
        <item name="android:layout_width">@dimen/poster_185_width</item>
        <item name="android:layout_height">@dimen/poster_185_height</item>
    </style>

    <style name="Holder" />

    <style name="Holder.Content" parent="Holder" />

    <style name="Holder.Content.Text" parent="Holder.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="TabLayout.Sub" parent="Widget.Material3.TabLayout">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabBackground">@drawable/selector_sub_tab_round</item>
        <item name="tabTextAppearance">@style/TabLayout.Sub.Text</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/onPrimary</item>
    </style>

    <style name="TabLayout.Sub.Text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
