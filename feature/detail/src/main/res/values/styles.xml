<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextSpace" />

    <style name="TextSpace.TopPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="TextSpace.Information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="TextSpace.Information.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="Information"/>

    <style name="Information.Title" parent="Information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Information.Overview" parent="Information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Information.Body" parent="Information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="Information.Body.SingleLine" parent="Information.Body">
        <item name="maxLines">1</item>
    </style>
</resources>
